<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="fill"
    android:orientation="vertical"
    android:scrollbars="vertical">


    <Button
        android:id="@+id/classBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Button" />

    <LinearLayout
        android:id="@+id/classLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/nota1Name"
                    style="@style/gradesList.Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nota 1: " />

                <TextView
                    android:id="@+id/nota1Pts"
                    style="@style/gradesList.Nota"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="100" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/nota3Name"
                    style="@style/gradesList.Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nota 3: " />


                <TextView
                    android:id="@+id/nota3Pts"
                    style="@style/gradesList.Nota"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="100" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/parcial1Name"
                    style="@style/gradesList.Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Parcial 1:" />


                <TextView
                    android:id="@+id/parcial1Pts"
                    style="@style/gradesList.Nota"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="100" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/zonaName"
                    style="@style/gradesList.Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Zona: " />


                <TextView
                    android:id="@+id/zonaPts"
                    style="@style/gradesList.Nota"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="100" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/nota2Name"
                    style="@style/gradesList.Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nota 2:" />

                <TextView
                    android:id="@+id/nota2Pts"
                    style="@style/gradesList.Nota"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/nota4Name"
                    style="@style/gradesList.Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nota 4: " />


                <TextView
                    android:id="@+id/nota4Pts"
                    style="@style/gradesList.Nota"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="100" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/parcial2Name"
                    style="@style/gradesList.Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Parcial 2: " />


                <TextView
                    android:id="@+id/parcial2Pts"
                    style="@style/gradesList.Nota"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="100" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/finalName"
                    style="@style/gradesList.Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Final: " />


                <TextView
                    android:id="@+id/finalPts"
                    style="@style/gradesList.Nota"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="100" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
